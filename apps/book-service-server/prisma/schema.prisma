datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Book {
  author        String?
  createdAt     DateTime  @default(now())
  id            String    @id @default(cuid())
  isbn          String?
  loans         Loan[]
  publishedDate DateTime?
  reviews       Review[]
  title         String?
  updatedAt     DateTime  @updatedAt
}

model Loan {
  book       Book?     @relation(fields: [bookId], references: [id])
  bookId     String?
  createdAt  DateTime  @default(now())
  id         String    @id @default(cuid())
  loanDate   DateTime?
  returnDate DateTime?
  updatedAt  DateTime  @updatedAt
  user       User?     @relation(fields: [userId], references: [id])
  userId     String?
}

model Review {
  book      Book?    @relation(fields: [bookId], references: [id])
  bookId    String?
  comment   String?
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  rating    Int?
  updatedAt DateTime @updatedAt
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
}

model User {
  createdAt DateTime @default(now())
  email     String?  @unique
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  loans     Loan[]
  password  String
  reviews   Review[]
  roles     Json
  updatedAt DateTime @updatedAt
  username  String   @unique
}
